




<!-- 新規投稿部分 -->
<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>

  <!-- 投稿・更新時にサクセスメッセージ表示 -->
  <% if flash[:notice] %>
    <div class = "flash">
    <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- エラーメッセージ -->
  <% if flash[:alert] %>
   <div class = "flash">
    <%= flash[:alert] %>
    </div>
  <% end %>

<!-- タイトル記入 -->
<h5>Title</h5>
<%= f.text_field :title %>

<!-- 本文記入 -->
<h5>Opinion</h5>
<%= f.text_area :opinion %>

<br><%= f.submit 'Create Book' %>
<% end %>


<!-- 一覧表示部分 -->
<h2>Books</h2>
<table>

  <!-- 見出し表示 -->
  <thead>
    <tr>
      <th> Title </th>
      <th></th>
      <th> Opinion </th>
    </tr>
  </thead>

  <!-- 本文表示 -->
  <tbody>
    <% @books.each do |book| %>

    <tr>
      <td> <%= book.title %> </td>
      <td></td>
      <td> <%= book.opinion  %> </td>
      <td></td>
      <!-- 詳細ボタン -->
      <td> <%= link_to "Show",book_path(book.id) %> </td>
      <td></td>
      <!-- 編集ボタン -->
      <td> <%= link_to "Edit",edit_book_path(book.id) %></td>
      <td></td>
       <!-- 削除ボタン -->
      <td> <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>

    <% end %>
  </tbody>
</table>






